---
const { logo, anchorLink, items = [] } = Astro.props;
---

<nav class="w-full px-10 py-10 bg-[#EFEFEF]  text-secondary">
  <div class="flex flex-col md:flex-row gap-10 flex-wrap items-center ">
    <!-- Logo -->
    {logo && (
      <a href={anchorLink || "#"}>
        <img src={logo} alt="Logo" class="h-10 object-contain max-w-32" />
      </a>
    )}

    <!-- Navigation Items -->
    <ul class="flex flex-col md:flex-row items-center gap-5 text-sm font-medium">
      {items.map((item) => (
        <li>
          <a href={item.link} class="hover:underline font-bold">
            {item.title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
