---
const { cards } = Astro.props;
---

<section class="py-12 bg-gray-100">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Title -->
    <h2 class="text-3xl font-bold text-center mb-8">
      Let <span class="text-[#2D857F]">Rocket Shell Portable Storage</span> help
      you <span class="text-[#CE202F]">upgrade your home</span>
    </h2>

    <!-- Bento Grid Layout -->
    <div
      class="grid gap-6 md:grid-cols-3 auto-rows-[200px] md:auto-rows-[250px] lg:auto-rows-[300px]"
    >
      {
        cards.map((item) => (
          <div
            class={`bg-white shadow-lg rounded-xl p-6 flex flex-col items-start
          ${item.data.size === "wide" ? "col-span-2" : ""}
          ${item.data.size === "tall" ? "row-span-2" : ""}`}
          >
            {item.data.image && (
              <img
                src={item.data.image}
                alt={item.data.title}
                class="w-full h-auto rounded-lg mb-4 object-cover"
              />
            )}
            <div class="flex items-center gap-3">
              {item.data.icon && (
                <img src={item.data.icon} alt="Icon" class="w-6 h-6" />
              )}
              <h3 class="text-lg font-semibold">{item.data.title}</h3>
            </div>
            <p class="text-gray-600 mt-2">{item.data.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
